generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model account {
  id Int @id @default(autoincrement())
  username String @unique
  email String @unique
  creation_date DateTime @default(now())
  avatarURL String @default("https://cdn.discordapp.com/attachments/891978000000000000/891978000000000000/unknown.png")
  password String
  songs song[]
}

model song {
  id Int @id @default(autoincrement())
  title String
  coverURL String
  songURL String
  publication_date DateTime @default(now())
  user_id Int
  artist_id Int
  duration Int
  account account @relation(fields: [user_id], references: [id])
  artist artist @relation(fields: [artist_id], references: [id])
}

model artist {
  id Int @id @default(autoincrement())
  name String
  songs song[]
  avatarURL String
}
